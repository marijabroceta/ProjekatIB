$(document).ready(function(){

	get_users();
	
	$('#add_form').hide();
	
	$('#add_user').on('click',function(e){
		$('#add_form').show();
	});
	
	$('#cancel').on('click',function(e){
		$('#add_form').hide();
	});
});

function table_header(){
	var table = $('#users_table');
	table.empty();
	table.append('<tr>'+
					'<th>Email</th>'+
					'<th>Certificate</th>'+
				'</tr>');
}

function get_users(){
	var token = localStorage.getItem("token");
	console.log(token);
	
	/*$.ajaxSetup({
		beforeSend : function(xhr) {
            xhr.setRequestHeader("Accept", "application/json");
            xhr.setRequestHeader("Content-Type", "application/json");
            xhr.setRequestHeader("Access-Control-Allow-Origin", "/api/users/*");
            xhr.setRequestHeader("Authorization", "Bearer " + token);
            
            console.log(xhr.getResponseHeader("Authorization"));
        }
	});*/
	
	$.ajax({
		
		headers:{"Authorization" :"Bearer " + token,
			"Access-Control-Allow-Origin": "/api/users/*"},
		type: 'GET',
		dataType:'json',
		crossDomain: true,
		url:'https://localhost:8443/api/users',
		success:function(response){
			table_header();
			var table = $('#users_table');
			for(var i=0; i<response.length; i++) {
				user = response[i];
				console.log(user.email);
				table.append('<tr class="data">'+
								'<td>'+user.email+'</td>'+
								'<td><button class="btn btn-default">Download</button></td>'+
							'</tr>');
			}
		}
	});
}

function addUser(){
	var email = $('#email').val().trim();
	var password = $('#password').val().trim();
	
	var data = {
			'email':email,
			'password':password
		}
		console.log(data);
	$.ajax({
		type: 'POST',
        contentType: 'application/json',
        headers:{"Authorization" :"Bearer " + token,
			"Access-Control-Allow-Origin": "/api/users/*"},
        url: 'https://localhost:8443/api/users',
        data: JSON.stringify(data),
        dataType: 'json',
        crossDomain: true,
		cache: false,
		processData: false,
		success:function(response){
			alert("Created");
		},
		error: function (jqXHR, textStatus, errorThrown) {  
			alert(textStatus);
		}
	});
}